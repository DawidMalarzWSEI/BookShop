@using BookShop.Data.ViewModels;
@model LoginVM;

@{
    ViewData["Title"] = "Logowanie";
}

<div class="card shadow p-3 mb-5 bg-white rounded mt-5">
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h4 class="card-title text-center">Logowanie</h4>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <span><b>Przepraszamy!</b> - @TempData["Error"] </span>
                    </div>
                }

                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" placeholder="Adres e-mail" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Hasło" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-3">
                        <button class="btn btn-lg btn-success" type="submit">Zaloguj się</button>
                        <a class="btn btn-lg btn-secondary" asp-controller="Books" asp-action="Index">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
