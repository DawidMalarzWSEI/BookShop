@model BookShop.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<h4>Czy na pewno chcesz usunąć pisarza?</h4>
<hr />
<div class="card justify-content-center" style="width: 35rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name @Model.LastName</h5>
        <img src="@Model.ProfilePictureURL" class="card-img-top mb-3" alt="@Model.Name @Model.LastName profile picture" style="height: 200px; object-fit: cover;">
        <p class="card-text">@Model.Biography</p>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-danger">Usuń</button>
                    <a asp-action="Index" class="btn btn-primary">Anuluj</a>
                </div>
            </div>
        </form>
    </div>
</div>
