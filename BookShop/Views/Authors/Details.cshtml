@model BookShop.Models.Author

@{
    ViewData["Title"] = "Details";
}


<div class="row mt-5">
    <div class="col-md-4">
        <img src="@Model.ProfilePictureURL" class="img-fluid">
    </div>
    <div class="col-md-8">
        <h4>@Model.Name @Model.LastName</h4>
        <p>@Model.Biography</p>
        <a class="btn btn-secondary" asp-action="Index">Cofnij</a>
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a>
        }

        
    </div>
</div>
