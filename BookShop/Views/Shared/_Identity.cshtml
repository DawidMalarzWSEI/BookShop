@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager; 


@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">Zaloguj się
        </a>
        <span style="padding: 5px;"></span>

    <a class="btn btn btn-warning" asp-controller="Account" asp-action="Register">
        Utwórz konto
        </a>
}
else
{

        <div class="dropdown">
            <ul class="navbar-nav">
                 <li><a class="nav-link px-2 text-white" asp-controller="Orders" asp-action="Index">Zamówienia</a></li>
            </ul>
        </div>
        <span style="padding: 5px;"></span>
        <form asp-controller="Account" asp-action="Logout">
            <button class="btn btn-outline-danger my-2 my-sm-0">
                <i class="bi bi-box-arrow-in-right"></i> Wyloguj
            </button>
        </form>
}

